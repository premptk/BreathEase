<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root_constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:animateLayoutChanges="true"
        android:background="@drawable/ib_bottom_sheet_dialog_dark_bkg">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="8dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="16dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="16dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="24dp" />

        <ImageView
            android:id="@+id/sheet_grabber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toBottomOf="@id/guideline_top" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:lineSpacingExtra="4sp"
            android:text="Card details - prem"
            android:textAppearance="@style/TextAppearance.Rupeek.IB.Title2.Dark"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toBottomOf="@+id/sheet_grabber" />

        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/title"
            app:layout_constraintEnd_toStartOf="@+id/guideline_end"
            app:layout_constraintTop_toTopOf="@+id/title" />

        <ImageView
            android:id="@+id/card_no_details"
            android:layout_width="264dp"
            android:layout_height="0dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="32dp"
            android:src="@drawable/ib_card_no_details"
            app:layout_constraintDimensionRatio="0.673"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toBottomOf="@+id/close" />

        <TextView
            android:id="@+id/card_holder_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:lineSpacingExtra="5sp"
            app:layout_constraintStart_toStartOf="@+id/card_no_details"
            app:layout_constraintTop_toTopOf="@+id/card_no_details"
            tools:text="RAJESHWAR\nRAO" />

        <TextView
            android:id="@+id/card_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="40dp"
            android:lineSpacingExtra="14sp"
            app:layout_constraintStart_toStartOf="@+id/card_no_details"
            app:layout_constraintTop_toBottomOf="@+id/card_holder_name"
            tools:text="4553\n3890\n1800\n3212" />

        <TextView
            android:id="@+id/valid_until_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:lineSpacingExtra="3sp"
            android:text="valid until"
            app:layout_constraintStart_toStartOf="@+id/card_no_details"
            app:layout_constraintTop_toBottomOf="@+id/card_no" />

        <TextView
            android:id="@+id/valid_until"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:lineSpacingExtra="5sp"
            app:layout_constraintStart_toStartOf="@+id/valid_until_text"
            app:layout_constraintTop_toBottomOf="@+id/valid_until_text"
            tools:text="12/27" />

        <TextView
            android:id="@+id/cvv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:text="show cvv"
            app:layout_constraintBaseline_toBaselineOf="@+id/valid_until_text"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@+id/valid_until_text" />

        <TextView
            android:id="@+id/cvv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:lineSpacingExtra="5sp"
            app:layout_constraintEnd_toEndOf="@+id/cvv_text"
            app:layout_constraintStart_toStartOf="@+id/cvv_text"
            app:layout_constraintTop_toBottomOf="@+id/cvv_text"
            tools:text="345" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/show_cvv"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/ib_sectional_button_bkg"
            android:drawablePadding="8dp"
            android:gravity="start|center_vertical"
            android:lineSpacingExtra="2sp"
            android:paddingStart="16dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="30px"
            android:maxLines="2"
            android:text="Show cvv"
            android:textAppearance="@style/TextAppearance.Rupeek.IB.BodyMedium.MediumEmphasis.Dark"
            android:filterTouchesWhenObscured="true"
            app:drawableStartCompat="@drawable/ib_ic_show_cvv"
            app:layout_constraintBottom_toBottomOf="@id/guideline_bottom"
            app:layout_constraintEnd_toStartOf="@+id/copy_card_no"
            app:layout_constraintStart_toEndOf="@id/guideline_start"
            app:layout_constraintTop_toBottomOf="@+id/card_no_details"
            app:layout_constraintVertical_bias="0" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/copy_card_no"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:lineSpacingExtra="2sp"
            android:layout_marginTop="26dp"
            android:background="@drawable/ib_sectional_button_bkg"
            android:drawablePadding="8dp"
            android:gravity="start|center_vertical"
            android:paddingStart="16dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLines="2"
            android:textSize="30px"
            android:text="Copy\ncard num"
            android:textAppearance="@style/TextAppearance.Rupeek.IB.BodyMedium.MediumEmphasis.Dark"
            android:filterTouchesWhenObscured="true"
            app:drawableStartCompat="@drawable/ib_ic_show_cvv"
            app:layout_constraintBottom_toBottomOf="@id/guideline_bottom"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintStart_toEndOf="@id/show_cvv"
            app:layout_constraintTop_toBottomOf="@id/card_no_details"
            app:layout_constraintVertical_bias="0" />

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:visibility="gone"
            app:indicatorColor="#333333"
            app:indicatorSize="24dp"
            app:layout_constraintBottom_toBottomOf="@id/guideline_bottom"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toTopOf="@id/guideline_top"
            app:trackColor="#FFBA49"
            tools:visibility="visible" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>